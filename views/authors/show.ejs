<style>
  @import url('https://fonts.googleapis.com/css2?family=Big+Shoulders+Stencil+Display:wght@900&display=swap');
  h1{
  font-family: 'Big Shoulders Stencil Display', cursive;
}
h2{
  font-family: 'Big Shoulders Stencil Display', cursive;
}
</style>

<h1>Author: <%= author.getFullName() %></h1>

<p><%= author.bio %></p>
<a href="/articles/new" class="btn btn-primary">Create a new Post</a>

<hr />

<h2>Articles</h2>

<% if(author && author.articles) { %>
  <% author.articles.forEach(function(a) { %>
    <div class="well">
      <h3>
        <a href="/articles/<%= a.id %>"><%= a.title %></a>
      </h3>
    </div>
  <% }) %>
<% } else { %>
  <h3>No articles yet!</h3>
<% } %>
