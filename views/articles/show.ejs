<style>
#commentowa {
  background-color: rgb(211, 203, 203);
  border-radius: 5%;
  width:20%;
  text-align: left;
  font-family: Arial, Helvetica, sans-serif;
  margin-left: 15px;
}

h6 {
 font-size: 13px;
 font-weight: 800;
 padding: 4px;
}

small {
  font-size: 12px;
  padding: 4px;
}
</style>

<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p><%= article.content %></p>


<% comment.forEach(function(com){ %>
  <div id="commentowa">
  <h6><%= com.dataValues.name %></h4>
  <small>   <%= com.dataValues.content %>   </small>
   </div>
<% }) %>


<form action="/" method="POST">
  <div class="form-group">
    <label for="Name">Name</label>
    <input type="text" class="form-control" id="name" name="name" required>
  </div>
     
  <div class="form-group">
    <label for="content">Comment</label>
    <textarea type="text" class="form-control" id="content" name="content" required></textarea>
    <input type="hidden" name="articleId" value="<%= id %>"> 
  </div>
  
  <input type="submit" class="btn btn-primary">
</form>
<hr />

<a href="/">&larr; Back Home</a>
