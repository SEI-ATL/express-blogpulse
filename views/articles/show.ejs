<h1>
    <%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
    <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<h4 class='article'>
    <%= article.content %>
</h4>
<hr />
<h2>Comments:</h2>
<% for (let i =0; i<article.comments.length; i++){ %>
    <% let comment = article.comments[i].dataValues%>
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>
                    <%= comment.content %>
                </h4>
                <p class="commenter">-
                    <%= comment.user %>
                </p>
            </div>
        </div>
        <% } %>
            <hr />
            <form action="/articles/comments" method='POST'>
                <div class="form-group">
                    <label for="author">Name</label>
                    <select name="user" id="author" class="form-control" required>
                  <% authors.forEach(function(author) { %>
                    <option value="<%= author.firstName %> <%= author.lastName %>"><%= author.getFullName() %></option>
                  <% }) %>
                </select>
                    <p>If your name doesn't show up, please <a href="/authors/new">sign up to be an author.</a></p>
                </div>
                <div class="form-group">
                    <label for="comment">Content</label>
                    </br>
                    <textarea class="form-control" type="text" name="content" id="comment"></textarea>
                </div>
                <input type="hidden" name="articleId" value='<%= article.id %>'>
                <input type="submit" value="Comment" class="btn btn-primary">
            </form>
            <hr />

            <a id="back" href="/">&larr; Back Home</a>