<div class="row">
    <div class="col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <img class="hero" src="https://upload.wikimedia.org/wikipedia/commons/e/e3/Seattle_Kerry_Park_Skyline.jpg">
            </div>
        </div>
        <h1 class="main-title">Latest from BlogPulse</h1>
        <hr class="main-title" />

        <% articles.forEach(function(a) { %>
            <div class="well">
                <h2>
                    <a href="/articles/<%= a.id %>">
                        <%= a.title %>
                    </a>
                    </br>
                    <small>by <%= a.author.getFullName() %></small>
                </h2>
                <p>
                    <strong><%= moment(a.createdAt).calendar() %></strong>
                </p>
            </div>
            <% }) %>

    </div>
    <div class="col-sm-3">
        <h2 class='about'>About</h2>
        <p>BlogPulse is an up-and-coming player in the global media market, providing user-generated content across all topics.</p>
        <h2 class='about'>Our Authors</h2>
        <% authors.forEach(author => { %>
            <p>
                <%= author.getFullName() %>
            </p>
            <% }); %>
    </div>
</div>